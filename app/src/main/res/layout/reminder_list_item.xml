<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/card"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <LinearLayout
            android:id="@+id/reminderlay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_gravity="center"
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/wh_70"
                android:layout_height="@dimen/wh_70" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txtActionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingBottom="3dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:text="Date"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:text="Title"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Description"
                    android:visibility="gone"
                    android:textColor="@color/secondary_text" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Last Date"
                        android:textColor="@color/secondary_text"  />
                    <ImageButton
                        android:id="@+id/btnReminderEdit"
                        android:padding="@dimen/lrtbp_10"
                        android:background="@null"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <ImageButton
                        android:id="@+id/btnReminderDelete"
                        android:padding="@dimen/lrtbp_10"
                        android:background="@null"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>