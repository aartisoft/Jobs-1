                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/wh_50"
                        android:layout_marginLeft="@dimen/lrtbp_10"
                        android:background="@color/divider" />

                    <View
                        android:layout_width="@dimen/wh_20"
                        android:layout_height="@dimen/wh_20"
                        android:background="@drawable/bg2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:singleLine="true" />


                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Your Date of Birth"
                        android:textColor="@color/header" />


                    <TextView
                        android:id="@+id/txtDob"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:drawableRight="@drawable/ic_date_range_black_24dp"
                        android:gravity="center|left"
                        android:text="Date of Birth" />

                    <RadioGroup
                        android:id="@+id/rGroupGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/rFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female" />

                    </RadioGroup>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10">

                        <EditText
                            android:id="@+id/edMobile1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile 1"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10">

                        <EditText
                            android:id="@+id/edMobile2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile 2"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Your Mobile No shown to others"
                        android:textColor="@color/header" />

                    <RadioGroup
                        android:id="@+id/rGroupMobileShown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shown" />

                        <RadioButton
                            android:id="@+id/rNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Never" />

                    </RadioGroup>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Your Qualification"
                        android:textColor="@color/header" />

                    <TextView
                        android:id="@+id/txtQualification"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Qualification" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Completed Course"
                        android:textColor="@color/header"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtCourse"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Course"
                        android:visibility="gone" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10">

                        <EditText
                            android:id="@+id/edPecentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Percentage"
                            android:inputType="number"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Your Year of PassedOut"
                        android:textColor="@color/header" />

                    <TextView
                        android:id="@+id/txtYearOfPassedOut"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Year Of PassedOut" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Your Skills"
                        android:textColor="@color/header" />

                    <TextView
                        android:id="@+id/txtSkills"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Skill Set" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Are you completed your course ?"
                        android:textColor="@color/header" />

                    <RadioGroup
                        android:id="@+id/rGroupStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rPursuing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pursuing" />

                        <RadioButton
                            android:id="@+id/rCompleted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed" />

                    </RadioGroup>


                    <RadioGroup
                        android:id="@+id/rGroupFresher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wh_35"
                            android:layout_marginTop="@dimen/lrtbp_10"
                            android:drawablePadding="@dimen/lrtbp_30"
                            android:gravity="center|left"
                            android:text="Are you Fresher ?"
                            android:textColor="@color/header" />

                        <RadioButton
                            android:id="@+id/rFreshser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fresher" />

                        <RadioButton
                            android:id="@+id/rExperienced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experienced" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Choose your area of interest to work"
                        android:textColor="@color/header" />

                    <TextView
                        android:id="@+id/txtJobCat"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Area Of Interest" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Your Years of Experience"
                        android:textColor="@color/header" />

                    <TextView
                        android:id="@+id/txtYrsOfExp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Years of Experience"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtExpSalary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Expected Salary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Your Job Location"
                        android:textColor="@color/header" />

                    <TextView
                        android:id="@+id/txtJobPrefLocation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="Job Prefered Location" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:drawablePadding="@dimen/lrtbp_30"
                        android:gravity="center|left"
                        android:text="Pick Your Native Place"
                        android:textColor="@color/header" />

                    <TextView
                        android:id="@+id/txtDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_35"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="center|left"
                        android:text="District" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10">

                        <EditText
                            android:id="@+id/edTaluk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Taluk"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>

                    <EditText
                        android:id="@+id/edAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_150"
                        android:layout_marginBottom="@dimen/lrtbp_10"
                        android:background="@drawable/layout_bg"
                        android:gravity="left"
                        android:hint="Address"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="8"
                        android:padding="@dimen/lrtbp_10" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/lBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/lrtbp_10"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Sign Up"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>