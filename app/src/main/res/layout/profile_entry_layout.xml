                    android:visibility="gone">

                    <View
                        android:layout_width="@dimen/wh_20"
                        android:layout_height="@dimen/wh_20"
                        android:layout_marginTop="@dimen/lrtbp_20"
                        android:background="@drawable/bg1" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/wh_50"
                        android:layout_marginLeft="@dimen/lrtbp_10"
                        android:background="@color/divider" />

                    <View
                        android:layout_width="@dimen/wh_20"
                        android:layout_height="@dimen/wh_20"
                        android:background="@drawable/bg2" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/wh_240"
                        android:layout_marginLeft="@dimen/lrtbp_10"
                        android:background="@color/divider" />

                    <View
                        android:layout_width="@dimen/wh_20"
                        android:layout_height="@dimen/wh_20"
                        android:background="@drawable/bg1" />

                    <View
                        android:layout_width="2dp"
