                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:gravity="center"
                android:padding="@dimen/lrtbp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quick_start_cropped_image"
                        android:layout_width="@dimen/wh_100"
                        android:layout_height="@dimen/wh_100"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/user" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/lrtbp_10"
                        android:text="Email"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/lrtbp_10"
                        android:text="Its time for picture"
                        android:textColor="#ff5100" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/lrtbp_10"
                        android:text="Upload your image to Showcase the best you"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
