<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/joblay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/wh_100"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtJobType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/lrtbp_10"
                    android:paddingRight="@dimen/lrtbp_10"
                    android:text="private"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_10" />

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="@dimen/wh_70"
                    android:layout_height="@dimen/wh_70"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    android:layout_marginRight="@dimen/lrtbp_10"
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:scaleType="fitXY"
                    android:src="@drawable/nithra_round" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/lrtbp_10"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Title"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/txtCompanyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lrtbp_10"
                            android:drawableLeft="@drawable/ic_domain"
                            android:drawablePadding="@dimen/lrtbp_10"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:maxLines="2"
                            android:text="Company Name"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtnoofvacancy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:text="பணியிடங்கள்"
                            android:textColor="@color/light_green_dark"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNoOfVacancy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lrtbp_10"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/light_green_dark"
                            android:textSize="@dimen/txt_16"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_check_all"
                    android:drawablePadding="@dimen/lrtbp_10"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/lrtbp_10"
                    android:paddingRight="@dimen/lrtbp_10"
                    android:paddingTop="@dimen/lrtbp_10"
                    android:text="Skills"
                    android:textColor="@color/secondary_text"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/verified_logo"
                android:layout_width="@dimen/wh_60"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:padding="5dp"
                android:paddingLeft="@dimen/lrtbp_10"
                android:paddingRight="@dimen/lrtbp_10"
                android:src="@drawable/verified" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_10"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/lrtbp_10"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:orientation="vertical"
                    android:text="10 Apr 2017"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/txt_10" />

                <TextView
                    android:id="@+id/txtDateDiff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/lrtbp_5"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:text="14 days left"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/txt_10" />

                <ImageButton

                    android:id="@+id/btnReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:paddingLeft="@dimen/lrtbp_10"
                    android:paddingRight="@dimen/lrtbp_10"
                    android:src="@drawable/ic_alarm_black_24dp" />

                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="@dimen/wh_20"
                    android:layout_height="@dimen/wh_20"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:paddingLeft="@dimen/lrtbp_10"
                    android:paddingRight="@dimen/lrtbp_10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star_off" />

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:padding="5dp"
                    android:paddingLeft="@dimen/lrtbp_10"
                    android:paddingRight="@dimen/lrtbp_10"
                    android:src="@drawable/ic_menu_share" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
