<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:padding="@dimen/lrtbp_10"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="தங்களது எதிர்கால வாழ்க்கைக்கு சிறப்பான வேலைவாய்ப்பு தகவல்களை அளிக்கும் நமது செயலியை ஊக்குவிக்க 5 நட்சத்திர குறியீடு வழங்க அன்புடன் கேட்டுக்கொள்கிறோம்."
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/imgRating"
            android:layout_margin="@dimen/lrtbp_10"
            android:background="@android:color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/five_star"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_50" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtRateUs"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/lrtbp_20"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="@dimen/txt_16"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:text="@string/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:background="@android:color/white"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtFeedBack"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/lrtbp_20"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="@dimen/txt_16"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:text="@string/feed_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>