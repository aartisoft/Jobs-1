<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_black"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_black"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/lrtbp_10"
                android:background="@drawable/bg_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/lrtbp_5"
                        android:padding="@dimen/lrtbp_15"
                        android:text="வெளியேற விரும்புகிறீர்களா ?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_18"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:id="@+id/frame_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/lrtbp_15">

                        <Button
                            android:id="@+id/ok"
                            android:layout_width="@dimen/wh_100"
                            android:layout_height="50dp"
                            android:background="@color/colorPrimary"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/yes"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/no"
                            android:layout_width="@dimen/wh_100"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/lrtbp_15"
                            android:background="@color/colorPrimary"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/no"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>