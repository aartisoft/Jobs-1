<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_lay"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/transparent">

                <TextView
                    android:id="@+id/report_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_lay"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_40"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/wh_35"
                        android:layout_height="match_parent"
                        android:padding="@dimen/lrtbp_5"
                        android:background="@color/skyblue"
                        android:src="@drawable/profile" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/trans_black"
                        android:gravity="center"
                        android:padding="@dimen/lrtbp_5"
                        android:hint=""
                        android:singleLine="true"
                        android:lineSpacingExtra="5dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/shade2"
                        android:textSize="16dp"
                        android:textStyle="italic|bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/report"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_200"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans_black"
                    android:gravity="top"
                    android:hint=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/shade2"
                    android:textSize="15dp"
                    android:textStyle="italic|bold" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/lrtbp_15"
                    android:layout_marginTop="@dimen/lrtbp_15"
                    android:background="@drawable/layout_bg"
                    android:padding="@dimen/lrtbp_10"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/layoutBottom"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/lightblue_circle"
        android:padding="5dp"
        android:src="@drawable/ic_close" />

</RelativeLayout>