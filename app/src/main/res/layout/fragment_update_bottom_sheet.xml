<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_18"
            android:gravity="center|left"
            android:text="Pick Year"
            android:id="@+id/txtHeader"
            android:paddingLeft="@dimen/lrtbp_20"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />


        <nithra.jobs.career.placement.utills.ColorChangableNumberPicker
            android:descendantFocusability="blocksDescendants"
            android:layout_below="@id/txtHeader"
            android:id="@+id/numberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/numberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_1" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/txtNotNow"
                    android:padding="@dimen/lrtbp_15"
                    android:typeface="serif"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="NOT NOW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:background="@color/divider"
                    android:layout_width="@dimen/wh_1"
                    android:layout_height="match_parent" />
                <TextView
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/txtSet"
                    android:padding="@dimen/lrtbp_15"
                    android:typeface="serif"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="SET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_1" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
