<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wh_35"
        android:background="@drawable/promo_bg1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/txt_10">

        <EditText
            android:id="@+id/promo_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lrtbp_20"
            android:layout_weight="1"
            android:background="@drawable/bg_underscore2"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Enter Promocode..."
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:padding="@dimen/txt_10"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textColorHint="#e0e0e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paste_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/txt_10"
                android:background="@drawable/bg_orange_line"
                android:padding="8dp"
                android:text="  Paste   "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/apply_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/txt_10"
                android:background="@drawable/bg_yellow_thick"
                android:padding="8dp"
                android:text="  Apply   "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/wh_120"
                android:layout_height="@dimen/wh_120"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/lrtbp_5"
                android:src="@drawable/prize" />

            <ImageView
                android:id="@+id/close_img"
                android:layout_width="@dimen/wh_35"
                android:layout_height="@dimen/wh_35"
                android:layout_alignParentRight="true"
                android:padding="@dimen/wh_2"
                android:rotation="180"
                android:src="@drawable/close_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/lrtbp_5"
            android:text="Apply and Earn Title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lrtbp_10"
            android:visibility="gone"
            app:cardElevation="@dimen/lrtbp_10"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="@dimen/lrtbp_5"
            card_view:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/lrtbp_5"
                    android:layout_marginLeft="@dimen/txt_25"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="@dimen/lrtbp_5"
                    android:layout_weight="1"
                    android:background="@drawable/promo_bg1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/lrtbp_5">

                    <EditText
                        android:id="@+id/promo_code_edit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:layout_weight="1"
                        android:background="@drawable/bg_underscore2"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="Enter Promocode..."
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:maxLength="10"
                        android:padding="@dimen/txt_10"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        android:textColorHint="#e0e0e0" />

                    <ImageView
                        android:layout_width="@dimen/wh_40"
                        android:layout_height="@dimen/wh_40"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:src="@drawable/smartphone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/lrtbp_5"
                        android:text="Apply and Earn Title"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#FFF"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/wh_2"
                    android:layout_weight="3.5"
                    android:background="@drawable/promo_bg2"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/close_img1"
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="@dimen/wh_35"
                            android:layout_weight="1"
                            android:padding="@dimen/lrtbp_5"
                            android:rotation="180"
                            android:src="@drawable/close_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/paste_txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/wh_2"
                            android:background="@drawable/bg_black_line"
                            android:padding="@dimen/lrtbp_5"
                            android:text="Paste"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/apply_txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/wh_2"
                            android:background="@drawable/bg_black_line"
                            android:padding="@dimen/lrtbp_5"
                            android:text="Apply"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>